<!-- app/views/posts/index.html.erb -->
<h1>投稿一覧</h1>

<%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
<%= link_to "ユーザー編集", edit_user_path(current_user), class: "btn btn-secondary" %>
<%= link_to "ログアウト", logout_path, method: :delete, class: "btn btn-danger" %>

<hr>

<% @posts.each do |post| %>
  <div style="margin-bottom: 20px;">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <% if post.image.attached? %>
      <%= image_tag post.image, size: "300x300" %>
    <% end %>
    <p><%= post.content %></p>
  </div>
<% end %>
