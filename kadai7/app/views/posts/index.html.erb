<h2>投稿一覧</h2>

<%= search_form_for @q do |f| %>
  <%= f.label :title_cont, "タイトルで検索：" %>
  <%= f.search_field :title_cont %>
  <%= f.submit "検索" %>
<% end %>

<ul>
  <% @posts.each do |post| %>
    <li><%= link_to post.title, post_path(post) %>（<%= post.user.name %>）</li>
  <% end %>
</ul>

<%= link_to "新規投稿", new_post_path %>
